<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- 状态行 -->
    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/status_disconnected"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark" />

    <!-- 设备选择 + 刷新 + 连接 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <Spinner
            android:id="@+id/spinnerDevices"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnRefreshDevices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷新" />

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接" />
    </LinearLayout>

    <!-- 串口显示配置：Hex / 时间戳 / 自动滚动 / 自动重连 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <CheckBox
            android:id="@+id/checkHexReceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hex显示" />

        <CheckBox
            android:id="@+id/checkTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间戳"
            android:checked="true" />

        <CheckBox
            android:id="@+id/checkAutoScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动滚动"
            android:checked="true" />

        <CheckBox
            android:id="@+id/checkAutoReconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动重连" />
    </LinearLayout>

    <!-- 接收区（原始日志） + 清空 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/txtReceive"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:padding="4dp"
            android:textSize="12sp"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/btnClearReceive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="清空" />
    </LinearLayout>

    <!-- 发送配置：Hex发送 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/editSend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入要发送的数据" />

        <CheckBox
            android:id="@+id/checkHexSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hex发送" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送" />
    </LinearLayout>

    <!-- 快捷命令 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="START" />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PAUSE" />

        <Button
            android:id="@+id/btnResume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RESUME" />

        <Button
            android:id="@+id/btnForcePause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ForcePause" />
    </LinearLayout>

    <!-- 滤波配置区域 -->
    <LinearLayout
        android:id="@+id/layoutFilterControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="滤波类型:" />

            <Spinner
                android:id="@+id/spinnerFilterType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="窗口大小:" />

            <EditText
                android:id="@+id/editWindowSize"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="5" />
        </LinearLayout>

        <!-- 卡尔曼参数 -->
        <LinearLayout
            android:id="@+id/layoutKalmanParams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q:" />

            <EditText
                android:id="@+id/editKalmanQ"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="0.01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R:" />

            <EditText
                android:id="@+id/editKalmanR"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="0.1" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtFilterStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当前滤波: 滑动平均 (窗口5)"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- 图表 -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chartGlucose"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="4dp" />

    <!-- 图表切换 + 清空 -->
    <LinearLayout
        android:id="@+id/layoutChartSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <Button
            android:id="@+id/btnTimeGlucoseChart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="时间-葡萄糖" />

        <Button
            android:id="@+id/btnVoltUricChart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电压-尿酸" />

        <Button
            android:id="@+id/btnVoltAscorbicChart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电压-抗坏血酸" />

        <Button
            android:id="@+id/btnVoltGlucoseChart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电压-葡萄糖" />

        <Button
            android:id="@+id/btnClearChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空图表" />
    </LinearLayout>

    <!-- 数据列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="4dp" />

</LinearLayout>
